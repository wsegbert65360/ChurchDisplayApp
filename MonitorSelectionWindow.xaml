<Window x:Class="ChurchDisplayApp.MonitorSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Display Monitor" 
        Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        BorderBrush="DarkBlue"
        BorderThickness="2"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Where is your secondary display/projector?"
                   FontSize="18" 
                   FontWeight="Bold" 
                   TextAlignment="Center"
                   Foreground="DarkBlue"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    x:Name="LeftButton"
                    Click="LeftButton_Click"
                    Background="#F0F8FF"
                    BorderBrush="DarkBlue"
                    BorderThickness="1"
                    Cursor="Hand">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="⬅️" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="LEFT SIDE" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2" 
                    x:Name="RightButton"
                    Click="RightButton_Click"
                    Background="#F0F8FF"
                    BorderBrush="DarkBlue"
                    BorderThickness="1"
                    Cursor="Hand">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="➡️" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="RIGHT SIDE" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <TextBlock Grid.Row="2" 
                   Text="Usually, projectors are detected as the 'Right' monitor."
                   FontSize="11" 
                   FontStyle="Italic"
                   TextAlignment="Center"
                   Foreground="Gray"
                   Margin="0,20,0,0"/>
    </Grid>
</Window>
