<Window x:Class="ChurchDisplayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Church Display Control"
        Height="600"
        Width="1000"
        Icon="icon.ico">
    
    <Grid x:Name="MainLayoutGrid" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MainLeftColumn" Width="2*" MinWidth="420" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition x:Name="MainRightColumn" Width="1*" MinWidth="260" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="MainTopRow" Height="2*" MinHeight="200" />
            <RowDefinition Height="5" />
            <RowDefinition x:Name="MainBottomRow" Height="1*" MinHeight="150" />
        </Grid.RowDefinitions>

        <!-- Horizontal GridSplitter between top and bottom rows -->
        <GridSplitter Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Height="5"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"
                      DragCompleted="LayoutSplitter_DragCompleted" />

        <!-- Vertical GridSplitter between left and right columns -->
        <GridSplitter Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      ResizeDirection="Columns"
                      ResizeBehavior="PreviousAndNext"
                      DragCompleted="LayoutSplitter_DragCompleted" />

        <!-- Playlist Panel -->
        <Border Grid.Row="0"
              Grid.Column="0"
              Background="{Binding PlaylistBackground}"
              BorderBrush="Gray"
              BorderThickness="1"
              Padding="5"
              AllowDrop="True"
              Drop="Playlist_Drop"
              DragEnter="Playlist_DragEnter">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="🎵 Media Playlist"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="DarkBlue"
                           Margin="0,0,0,5" />
                <ListBox x:Name="PlaylistListBox"
                     Grid.Row="1"
                     ItemsSource="{Binding PlaylistItems}"
                     SelectedItem="{Binding SelectedItem}"
                     MouseDoubleClick="PlaylistListBox_DoubleClick"
                     AllowDrop="True"
                     Drop="PlaylistListBox_Drop"
                     DragOver="PlaylistListBox_DragOver"
                     PreviewMouseLeftButtonDown="PlaylistListBox_PreviewMouseLeftButtonDown"
                     PreviewMouseMove="PlaylistListBox_PreviewMouseMove">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock x:Name="FileTypeIcon" Text="🎵" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0" />
                                <TextBlock Text="{Binding FileName}" VerticalAlignment="Center" />
                            </StackPanel>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Extension}" Value=".mp4">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🎬" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".mov">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🎬" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".wmv">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🎬" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".mkv">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🎬" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".mp3">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🎵" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".wav">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🎵" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".flac">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🎵" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".wma">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🎵" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".jpg">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🖼️" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".jpeg">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🖼️" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".png">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🖼️" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".bmp">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🖼️" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Extension}" Value=".gif">
                                    <Setter TargetName="FileTypeIcon" Property="Text" Value="🖼️" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Delete" Click="DeleteMenuItem_Click" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
            <Button Grid.Row="2"
                    Content="🗑️ Delete Selected"
                    Click="DeleteSelected_Click"
                    Padding="8,4"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left" />
        </Grid>
        </Border>

        <!-- Preview Panel -->
        <Grid Grid.Row="0"
              Grid.Column="2"
              Margin="0,0,0,10">
            <Border Background="LightGray"
                    BorderBrush="Black"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="Live Preview"
                               FontWeight="Bold"
                               Padding="4"
                               Background="DarkGray"
                               Foreground="White" />
                    <Image x:Name="PreviewImage"
                           Grid.Row="1"
                           Stretch="Uniform"
                           Margin="0" />
                    <TextBlock x:Name="PreviewLabel"
                               Grid.Row="2"
                               Text="{Binding CurrentMediaTitle}"
                               TextWrapping="Wrap"
                               Padding="2"
                               TextAlignment="Center"
                               FontSize="11" />
                    <!-- Progress Bar -->
                    <Border Grid.Row="3"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="2"
                            Margin="2"
                            Background="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="CurrentTimeLabel"
                                       Grid.Column="0"
                                       Text="{Binding CurrentTimeStr}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       Margin="0,0,5,0"
                                       Width="40"
                                       FontSize="9"
                                       FontFamily="Courier New"
                                       FontWeight="Bold"
                                       Foreground="DarkBlue" />
                            <Slider x:Name="ProgressSlider"
                                    Grid.Column="1"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="{Binding Progress, Mode=TwoWay}"
                                    VerticalAlignment="Center"
                                    PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseLeftButtonDown"
                                    PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseLeftButtonUp" />
                            <TextBlock x:Name="DurationLabel"
                                       Grid.Column="2"
                                       Text="{Binding DurationStr}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       Margin="5,0,0,0"
                                       Width="40"
                                       FontSize="9"
                                       FontFamily="Courier New"
                                       FontWeight="Bold"
                                       Foreground="DarkBlue" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>


        <!-- Bottom Control Area with proper grid structure -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="80" />  <!-- Media Controls + Remote (resizable) -->
                <RowDefinition Height="5" />  <!-- GridSplitter -->
                <RowDefinition Height="Auto" />  <!-- Display Controls + Background Music -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="420" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="1*" MinWidth="260" />
            </Grid.ColumnDefinitions>

            <!-- Horizontal GridSplitter between media controls and display controls -->
            <GridSplitter Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="3"
                          Height="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ResizeDirection="Rows"
                          ResizeBehavior="PreviousAndNext"
                          DragCompleted="LayoutSplitter_DragCompleted" />

            <!-- Media Playback Controls -->
            <Border x:Name="MediaControlsGroupBox"
                    Grid.Row="0"
                    Grid.Column="0"
                    Background="{Binding MediaControlsBackground}"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="5"
                    Margin="0,0,0,5">
                <StackPanel>
                    <TextBlock Text="Media Controls"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="DarkBlue"
                               Margin="0,0,0,5" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Button Content="⏮️ Previous"
                                Command="{Binding PreviousCommand}"
                                Padding="8,4"
                                Margin="0,0,5,0"
                                Width="80"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="⏯️ Play/Pause"
                                Command="{Binding PlayCommand}"
                                Padding="8,4"
                                Margin="0,0,5,0"
                                Width="100"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="⏹️ Stop"
                                Command="{Binding StopCommand}"
                                Padding="8,4"
                                Margin="0,0,5,0"
                                Width="70"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="⏭️ Next"
                                Command="{Binding NextCommand}"
                                Padding="8,4"
                                Margin="0,0,10,0"
                                Width="70"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <TextBlock Text="🔊 Volume:"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,5,0" />
                        <Slider x:Name="VolumeSlider"
                                Width="100"
                                Minimum="0"
                                Maximum="1"
                                Value="{Binding Volume, Mode=TwoWay}"
                                VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Remote (QR Code) -->
            <Border Grid.Row="0"
                    Grid.Column="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="5"
                    Margin="0,0,0,5">
                <StackPanel>
                    <TextBlock Text="📱 Remote"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="DarkBlue"
                               Margin="0,0,0,5" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                BorderBrush="DarkGray"
                                BorderThickness="1"
                                Background="White"
                                Padding="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                            <Image x:Name="RemoteQrImage"
                                   Width="70"
                                   Height="70"
                                   Stretch="Uniform" />
                        </Border>

                        <TextBlock Grid.Column="1"
                                   x:Name="RemoteUrlText"
                                   Text="Starting..."
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Main Control Buttons -->
            <Border x:Name="DisplayControlsBorder"
                    Grid.Row="2"
                    Grid.Column="0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="5"
                    Margin="0,0,0,0">
                <StackPanel>
                    <TextBlock Text="Playlist &amp; Display Controls"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="DarkBlue"
                               Margin="0,0,0,5" />
                    <WrapPanel Orientation="Horizontal">
                        <Button Content="📁 Add Files..."
                                Click="AddFiles_Click"
                                Padding="8,4"
                                Margin="0,0,5,5"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="💾 Save Playlist"
                                Click="SavePlaylist_Click"
                                Padding="8,4"
                                Margin="0,0,5,5"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="📂 Load Playlist"
                                Click="LoadPlaylist_Click"
                                Padding="8,4"
                                Margin="0,0,5,5"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="🎬 Go Live"
                                Click="GoLive_Click"
                                Padding="8,4"
                                Margin="0,0,5,5"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="🎵 Create Playlist"
                                Click="CreatePlaylist_Click"
                                Padding="8,4"
                                Margin="0,0,5,5"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="🖼️ Blank Display"
                                Command="{Binding BlankCommand}"
                                Padding="8,4"
                                Margin="0,0,5,5"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                        <Button Content="🖥️ Toggle Display"
                                Click="ToggleDisplay_Click"
                                Padding="8,4"
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="DarkBlue"
                                BorderThickness="1" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Background Music Controls -->
            <Border x:Name="BackgroundMusicGroupBox"
                    Grid.Row="2"
                    Grid.Column="2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="5"
                    Margin="0,0,0,0">
                <StackPanel>
                    <TextBlock Text="🎵 Background Music"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="DarkBlue"
                               Margin="0,0,0,8" />
                    <Button Content="🎵 Select Music..."
                            Click="SelectBackgroundMusic_Click"
                            Padding="8,4"
                            Margin="0,0,0,4" />
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,4">
                        <Button Content="▶️ Play"
                                Click="BackgroundMusicPlay_Click"
                                Padding="8,4"
                                Margin="0,0,4,0" />
                        <Button Content="⏸️ Pause"
                                Click="BackgroundMusicPause_Click"
                                Padding="8,4"
                                Margin="0,0,4,0" />
                        <Button Content="⏹️ Stop"
                                Click="BackgroundMusicStop_Click"
                                Padding="8,4" />
                    </StackPanel>
                    <TextBlock Text="Volume:"
                               Margin="0,0,0,2" />
                    <Slider x:Name="BackgroundMusicVolumeSlider"
                            Minimum="0"
                            Maximum="1"
                            Value="0.3"
                            Margin="0,0,0,4" />
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
