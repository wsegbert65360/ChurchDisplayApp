<Window x:Class="ChurchDisplayApp.ServiceElementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Elements"
        Height="700"
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="Service Elements"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ElementsStackPanel">
                <!-- Song for Beginning of Church Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Song for Beginning of Church"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="SongForBeginningFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="SongForBeginningSelectButton"
                                    Click="SongForBeginningSelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="SongForBeginningClearButton"
                                    Click="SongForBeginningClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Call to Worship Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Call to Worship"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="CallToWorshipFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="CallToWorshipSelectButton"
                                    Click="CallToWorshipSelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="CallToWorshipClearButton"
                                    Click="CallToWorshipClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Praise Song Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Praise Song"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="PraiseSongFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="PraiseSongSelectButton"
                                    Click="PraiseSongSelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="PraiseSongClearButton"
                                    Click="PraiseSongClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Prayer Song Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Prayer Song"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="PrayerSongFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="PrayerSongSelectButton"
                                    Click="PrayerSongSelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="PrayerSongClearButton"
                                    Click="PrayerSongClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Childrens Moment Song Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Childrens Moment Song"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="ChildrensMomentSongFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="ChildrensMomentSongSelectButton"
                                    Click="ChildrensMomentSongSelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="ChildrensMomentSongClearButton"
                                    Click="ChildrensMomentSongClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Communion Song Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Communion Song"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="CommunionSongFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="CommunionSongSelectButton"
                                    Click="CommunionSongSelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="CommunionSongClearButton"
                                    Click="CommunionSongClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Doxology Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Doxology"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="DoxologyFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="DoxologySelectButton"
                                    Click="DoxologySelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="DoxologyClearButton"
                                    Click="DoxologyClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Invitation Song Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Invitation Song"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="InvitationSongFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="InvitationSongSelectButton"
                                    Click="InvitationSongSelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="InvitationSongClearButton"
                                    Click="InvitationSongClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Ending Song Section -->
                <Border BorderBrush="DarkBlue" BorderThickness="2" Padding="15" CornerRadius="8" Margin="0,0,0,15" Background="LightBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Ending Song"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkBlue"
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Grid.Row="1"
                                   x:Name="EndingSongFileLabel"
                                   Text="No file selected"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Select File"
                                    x:Name="EndingSongSelectButton"
                                    Click="EndingSongSelect_Click"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                            <Button Content="Clear"
                                    x:Name="EndingSongClearButton"
                                    Click="EndingSongClear_Click"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    Background="White"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="1" />
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Placeholder for future elements -->
                <!-- More service elements will be added here -->
                
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Make Service!"
                    Click="MakeService_Click"
                    Padding="20,10"
                    Width="120"
                    Margin="0,0,10,0"
                    Background="LightGreen"
                    FontWeight="Bold" />
            <Button Content="Close"
                    Click="Close_Click"
                    Padding="20,10"
                    Width="100" />
        </StackPanel>
    </Grid>
</Window>
